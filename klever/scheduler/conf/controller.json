{
  "Klever Bridge": {
    "name": "localhost:8998",
    "user": "user",
    "password": "password"
  },
  "client-controller": {
    "consul": "/abs/path/to/consul",
    "script checks": [
      {
        "name": "klever-resources-check",
        "active": true,
        "interval": "5s"
      },
      {
        "name": "klever-node-check",
        "active": true,
        "interval": "5s"
      },
      {
        "name": "klever-schedulers-check",
        "active": true,
        "interval": "5s"
      }
    ],
    "service checks": [
      {
        "id": "klever",
        "name": "Klever Bridge on port 8998",
        "tcp": "localhost:8998",
        "interval": "10s",
        "timeout": "1s"
      }
    ],
    "setup GUI": true,
    "consul additional opts": [
      "-advertise=127.0.0.1",
      "-bootstrap-expect=1",
      "-log-level=info",
      "-server",
      "-retry-interval=30s"
    ],
    "consul additional configuration": {
      "disable_anonymous_signature": true,
      "disable_update_check": true,
      "enable_script_checks": true
    }
  },
  "node configuration": {
    "bind address": "0.0.0.0",
    "available for jobs": true,
    "available for tasks": true,
    "available CPU number": 1.0,
    "available RAM memory": 1.0,
    "available disk memory": 1.0
  },
  "common": {
    "working directory": "scheduler-controller-dir",
    "keep working directory": false,
    "debug": false,
    "logging": {
      "version": 1,
      "disable_existing_loggers": false,
      "formatters": {
        "brief": {
          "format": "%(name)s %(levelname)5s> %(message)s"
        },
        "detailed": {
          "format": "%(asctime)s (%(filename)s:%(lineno)03d) %(name)s %(levelname)5s> %(message)s"
        }
      },
      "handlers": {
        "console": {
          "class": "logging.StreamHandler",
          "level": "DEBUG",
          "formatter": "brief",
          "stream": "ext://sys.stdout"
        },
        "info_file_handler": {
          "class": "logging.handlers.RotatingFileHandler",
          "level": "INFO",
          "formatter": "detailed",
          "filename": "info.log",
          "maxBytes": 10485760,
          "backupCount": 20,
          "encoding": "utf-8"
        },
        "error_file_handler": {
          "class": "logging.handlers.RotatingFileHandler",
          "level": "ERROR",
          "formatter": "detailed",
          "filename": "errors.log",
          "maxBytes": 10485760,
          "backupCount": 20,
          "encoding": "utf-8"
        }
      },
      "loggers": {
        "default": {
          "level": "ERROR",
          "handlers": [
            "console"
          ],
          "propagate": "no"
        }
      },
      "root": {
        "level": "DEBUG",
        "handlers": [
          "console",
          "info_file_handler",
          "error_file_handler"
        ]
      }
    }
  }
}
